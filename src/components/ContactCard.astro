---
const contactDetails = {
  email: "jose@example.com",
  phone: "+34 123 456 789",
  linkedin: "https://www.linkedin.com/in/jose-antonio-vazquez"
};
---
<div class="w-[747px]">
  {/* Inputs y botón al principio */}
  <div class="flex justify-between mb-4 space-x-4">
    <input
      type="text"
      value="Name"
      class="px-6 py-3 bg-gray-300 text-black rounded focus:outline-none hover:bg-gray-400"
      minlength="2"
      required
    />
    <input
      type="text"
      value={contactDetails.phone}
      class="px-6 py-3 bg-gray-300 text-black rounded focus:outline-none hover:bg-gray-400"
      minlength="9"
      maxlength="9"
      required
    />
    <input
      type="email"
      value={contactDetails.email}
      class="px-6 py-3 bg-gray-300 text-black rounded focus:outline-none hover:bg-gray-400"
      required
    />
    <button class="px-6 py-3 bg-blue-500 text-white rounded hover:bg-blue-700">CONTACT US</button>
  </div>

  {/* Información de contacto con imagen */}
  <div class="flex items-start justify-between">
    {/* Lista de contacto */}
    <ul class="text-left text-black text-xl font-normal">
      <li class="mb-2">Email: <a href={`mailto:${contactDetails.email}`} class="text-blue-600">{contactDetails.email}</a></li>
      <li class="mb-2">Phone: {contactDetails.phone}</li>
      <li class="mb-2">LinkedIn: <a href={contactDetails.linkedin} target="_blank" class="text-blue-600">{contactDetails.linkedin}</a></li>
    </ul>

    {/* Imagen */}
    <div class="ml-6">
      <img src="/img/mapa.png" alt="Contact Image" class="w-[300px] h-auto rounded-lg shadow-md" />
    </div>
  </div>
</div>
