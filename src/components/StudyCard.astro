---
const { title, school, description, className, imageSrc } = Astro.props;
---

<div class="w-full max-w-2xl mx-auto my-6 bg-gray-100 rounded-lg shadow-md border border-gray-300">
  <!-- Título -->
  <div class="flex items-start p-6">
    <!-- Texto del título -->
    <div class="flex-grow text-left">
      <h2 class="text-2xl font-bold text-gray-800">{title}</h2>
    </div>
    <!-- Imagen -->
    <img src={imageSrc} alt={school} class="w-20 h-20 object-cover rounded-full border-2 border-gray-300 shadow-sm" />
  </div>
  <!-- Información -->
  <div class="px-6 pb-4 text-gray-700 text-left">
    <p class="text-lg font-semibold">{school}</p> 
    <p class="text-base mt-2 leading-relaxed">{description}</p>
  </div>
</div>
